{% import "_includes/forms" as forms %}

{{ forms.lightswitchField({
    label: "Enable Sent Email tracking?"|t('sprout-base-email'),
    instructions: "Disable Sent Email tracking to remove them from the sidebar navigation and make them no longer accessible in the Control Panel."|t('sprout-base-email'),
    name: 'enableSentEmails',
    on: settings.enableSentEmails
}) }}

<div id="settings-total-sentEmailsLimit">
    {{ forms.textField({
        label: "Sent Emails Limit"|t('sprout-base-email'),
        instructions: "The total number of Sent Emails that will be stored in the database per-site. When the limit is reached, the oldest Sent Emails for the site will be deleted. Default limit is 5000."|t('sprout-base-email'),
        name: 'sentEmailsLimit',
        size:'10',
        placeholder: '5000',
        value: settings.sentEmailsLimit,
        errors: ''
    }) }}

    {{ forms.selectField({
        label: "Cleanup Probability"|t('sprout-base-email'),
        id: 'cleanup-probability',
        name: 'cleanupProbability',
        instructions: "The probability that the Sent Emails cleanup task will run each time a Sent Email is tracked. A lower probability will trigger a cleanup task less often and the number of Sent Emails stored in the database may be higher than the Sent Emails Limit target until the cleanup task is triggered."|t('sprout-base-email'),
        options: [
            { value: '0', label: 'None' },
            { value: '100000', label: '1 in 10'},
            { value: '10000', label: '1 in 100' },
            { value: '1000', label: '1 in 1,000' },
            { value: '100', label: '1 in 10,000' },
            { value: '10', label: '1 in 100,000' },
            { value: '1', label: '1 in 1,000,000' }
        ],
        value: settings.cleanupProbability
    }) }}
</div>