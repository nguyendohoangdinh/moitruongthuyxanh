{% import "_includes/forms" as forms %}

{% if field.outputFormat == 'html' %}
    {{ value|raw }}
{% elseif field.outputFormat == 'textarea' %}
    {{ forms.textareaField({
        id: name,
        name: name,
        placeholder: field.fieldFormat,
        value: value is defined ? value : '',
        readonly: true,
        rows: 4
    }) }}
{% else %}
    {{ forms.textField({
        id: name,
        name: name,
        placeholder: field.fieldFormat,
        value: value is defined ? value : '',
        readonly: true
    }) }}
{% endif %}

{% css %}
    {% if field.showField %}
        #fields-{{ name }}-field input,
        #fields-{{ name }}-field textarea {
        color: #aaa;
        }
    {% else %}
        #fields-{{ name }}-field {
        display:none;
        }
    {% endif %}
{% endcss %}
